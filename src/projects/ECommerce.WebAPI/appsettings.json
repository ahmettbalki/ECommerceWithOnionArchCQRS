{
  "ConnectionStrings": {
    "SqlCon": "server = (localdb)\\MSSQLLocalDB; Database=ECommerceDb; Trusted_Connection=true"
  },

  "UserAddRule": {
    "UserNameMinCharacter": 3,
    "PasswordMinCharacter": 6
  },

  "UserAddRuleMessage": {
    "UserNameMinCharacterMessage": "Kullanıcı Adı minimum 3 karakterli olmalıdır.",
    "PasswordMinCharacterMessage": "Parola minimum 6 Karakterli olmalıdır."
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "SerilogLogConfigurations": {
    "FileLogConfiguration": {
      "FolderPath": "/logs/"
    },
    "MsSqlConfiguration": {
      "ConnectionString": "server = (localdb)\\MSSQLLocalDB; Database=ECommerceDb; Trusted_Connection=true",
      "TableName": "Logs",
      "AutoCreateSqlTable": true
    }
  },
  "AllowedHosts": "*"
}
